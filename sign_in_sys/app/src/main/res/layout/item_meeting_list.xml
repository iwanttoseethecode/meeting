<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



 <RelativeLayout
     android:layout_marginTop="2dp"
     android:layout_marginLeft="2dp"
     android:layout_marginRight="2dp"
     android:background="@drawable/corners_bg_small"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">


     <TextView
         android:paddingLeft="5dp"
         android:paddingRight="5dp"
         android:lines="2"
         android:ellipsize="end"
         android:textColor="@color/orange_exit"
         android:textSize="@dimen/smallText"
         android:gravity="center"
         android:id="@+id/item_meeting_name"
         android:text="研发中心2月总结会议"
         android:layout_width="140dp"
         android:layout_height="90dp"
         android:layout_alignParentTop="true"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true" />

     <View
         android:layout_toRightOf="@+id/item_meeting_name"
         android:background="@color/grey_low"
         android:layout_width="1dp"
         android:layout_height="90dp"/>

     <TextView

         android:lines="1"
         android:ellipsize="end"
         android:textColor="@color/grey_dark"
         android:textSize="@dimen/smallText"
         android:layout_marginLeft="10dp"
         android:gravity="center_vertical"
         android:text="会议地点：公司大会议室"
         android:id="@+id/item_meeting_place"
         android:layout_toRightOf="@id/item_meeting_name"
         android:layout_width="match_parent"
         android:layout_height="30dp" />
     <TextView
         android:textColor="@color/grey_dark"
         android:textSize="@dimen/smallText"
         android:layout_marginLeft="10dp"
         android:text="开始时间：2017-03-14 10:00"
         android:gravity="center_vertical"
         android:layout_toRightOf="@id/item_meeting_name"
         android:layout_below="@+id/item_meeting_place"
         android:id="@+id/item_meeting_time"
         android:layout_width="match_parent"
         android:layout_height="30dp" />
     <TextView
         android:textColor="@color/grey_dark"
         android:textSize="@dimen/smallText"
         android:layout_marginLeft="10dp"
         android:text="开始时间：2017-03-14 10:00"
         android:gravity="center_vertical"
         android:layout_toRightOf="@id/item_meeting_name"
         android:layout_below="@+id/item_meeting_time"
         android:id="@+id/item_meeting_end"
         android:layout_width="match_parent"
         android:layout_height="30dp" />




 </RelativeLayout>











</LinearLayout>