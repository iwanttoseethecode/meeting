<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/corners_bg_small">


        <TextView
            android:id="@+id/item_sign_name"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="姓名"
            android:textColor="@color/orange_exit"
            android:textSize="@dimen/newsTextSize" />

        <View
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/item_sign_name"
            android:background="@color/grey_low" />

        <TextView
            android:id="@+id/item_sign_num"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_sign_name"
            android:gravity="center_vertical"
            android:text="编号：1008611"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/smallText" />

        <TextView
            android:id="@+id/item_sign_part"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/item_sign_num"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_sign_name"
            android:gravity="center_vertical"
            android:text="部门：研发中心"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/smallText" />

        <TextView
            android:id="@+id/item_sign_state"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/item_sign_part"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_sign_name"
            android:gravity="center_vertical"
            android:text="签到状态：迟到"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/smallText" />

        <TextView
            android:id="@+id/item_sign_time"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/item_sign_state"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_sign_name"
            android:gravity="center_vertical"
            android:text="开始时间：2017-03-14 10:00"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/smallText" />



    </RelativeLayout>


</LinearLayout>